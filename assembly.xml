<assembly>
    <id>project-only</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>com.github.ragxar.wurm.client.mod:*</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>
</assembly>
